{
  "git": {
    "commit": true,
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "requireCleanWorkingDir": true,
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "pnpm run build"
  }
}
